#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;


void WorkA() 
{
    string slovo;
    cin >> slovo;
    cout << slovo.substr(0, slovo.size() - 2) + "i" << endl;
}

void WorkB() {
    int c = 0;
    string slovo;
    cin >> slovo;
    for (int i = 0; i < slovo.size(); ++i) {
        if (slovo[i] == slovo[i+1]) {
            c++;
        }
    }
    if (c >= 1) { cout << "1" << endl; }
    else { cout << slovo.size() << endl; }
}

void WorkC1() {
    int A, B;
    cin >> A >> B;
    vector<int> a(A);
    vector<int> b(B);
    for (int i = 0; i < A; ++i) {
        cin >> a[i];
    }
    for (int i = 0; i < B; ++i) {
        cin >> b[i];
    }
    for (int i = 0; i < A; ++i) {
        a[i] = b[0] - a[i];
    }
    bool is_sorted = true;
    for (int i = 0; i < A - 1; ++i) {
        if (a[i] > a[i + 1]) {
            is_sorted = false;
            break;
        }
    }
    if (is_sorted) {
        cout << "YES" << endl;
    }
    else {
        cout << "NO" << endl;
    }
}

int main()
{
    int t; cin >> t;
    while (t--) { 
        //WorkA();
        //WorkB();
        WorkC1();
    }
    return 0;
}
